<div style="width:500px;margin-left: 250px;">
<h1> Add Contact Details </h1>


<%= form_for @contact do |f| %>
 
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control'  %>
  </div>
  
  <div class="form-group">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :sex %><br>
    <%= f.select :sex, options_for_select(@sexs),class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, class: 'form-control' %>
  </div> 
 
  <div class="form-group">
    <%= f.label :relationship %><br>
    <%= f.text_field :relationship, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :contactimage %>
  </div>
  
  <div class="form-group">
   <%= render :partial => 'spree/address/form', :locals => { :form => ship_form, :address_type => 'shipping', :address => @order.ship_address } %>
  </div>
 
  <div class="circle">
    <%= f.submit  "Save Contact", class: "btn btn-primary"  %>
  </div>
  
  <div class="circle" style="margin-top: -100px; margin-left: 250px;color: black;">
    <h4 style="margin-top: 25px;"> Invite Contacts</h4>
  </div>
<% end %>
</div>
<%#= link_to 'Back', {:action => 'contact'} %>